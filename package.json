{
  "name": "jdhogfarm.com",
  "version": "1.0.0",
  "description": "This file provides an overview of the project.",
  "main": "index.js",
  "scripts": {
    "biome:check": "biome check --write .",
    "biome:format": "biome format --write .",
    "html:validate": "html-validate \"*.html\"",
    "html:vnu": "java -jar node_modules/vnu-jar/build/dist/vnu.jar --skip-non-html *.html",
    "css:lint": "stylelint \"*.html\" --custom-syntax postcss-html",
    "css:fix": "stylelint \"*.html\" --custom-syntax postcss-html --fix",
    "js:lint": "eslint \"*.html\"",
    "js:fix": "eslint \"*.html\" --fix",
    "lint:all": "npm run html:validate && npm run css:lint && npm run js:lint",
    "lint:fix": "npm run css:fix && npm run js:fix",
    "prepare": "husky",
    "test": "npm run lint:all"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "eslint": "^9.39.2",
    "eslint-plugin-html": "^8.1.3",
    "globals": "^17.0.0",
    "html-validate": "^10.6.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.5.6",
    "postcss-html": "^1.8.1",
    "stylelint": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "vnu-jar": "^26.1.11"
  }
}
